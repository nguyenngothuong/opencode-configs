{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-antigravity-auth@beta"],
  "provider": {
    "google": {
      "models": {
        "antigravity-claude-opus-4-5-thinking": { "name": "Claude Opus 4.5 Thinking" },
        "antigravity-claude-sonnet": { "name": "Claude Sonnet" },
        "antigravity-gemini-3-pro": { "name": "Gemini 3 Pro" },
        "antigravity-gemini-3-flash": { "name": "Gemini 3 Flash" }
      }
    },
    "glm": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://open.bigmodel.cn/api/paas/v4",
        "apiKey": "YOUR_GLM_API_KEY_HERE"
      },
      "models": {
        "glm-4-plus": { "name": "GLM-4 Plus" },
        "glm-4-flash": { "name": "GLM-4 Flash" }
      }
    }
  },
  "model": "google/antigravity-claude-opus-4-5-thinking"
}
